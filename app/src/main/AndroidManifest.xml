<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snstk.psrecord">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 사진 추가하기 위한것 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- firebase위한것 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".TempMainActivity" />
        <activity android:name=".ChoiceActivity" />
        <activity android:name=".SearchActivity" android:windowSoftInputMode = "adjustNothing"/>
        <activity android:name=".SearchPrac" android:windowSoftInputMode = "adjustNothing" />
        <activity android:name=".TeamRegister" />
        <activity android:name=".Ranking"></activity>

    </application>

</manifest>