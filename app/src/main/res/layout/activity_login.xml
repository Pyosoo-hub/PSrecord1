<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    tools:context=".LoginActivity">


    <Button
        android:id="@+id/experience"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="1dp"
        android:textAllCaps="false"
        android:background="@drawable/realclearbutton"
        android:textColor="#ffffff" />



    <EditText
        android:id="@+id/loginID"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="370dp"
        android:background="@drawable/login_id"
        android:padding="22dp"
        android:gravity="left"
        android:hint="Enter Your Email"
        android:textColorHint="#b4b4b4"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="#f5f1f1"
        android:inputType="text" />

    <EditText
        android:id="@+id/loginPW"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/loginID"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:hint="Enter Password"
        android:padding="22dp"
        android:textColorHint="#b4b4b4"
        android:textColor="#f2ecec"
        android:textAlignment="center"
        android:textSize="15sp"
        android:background="@drawable/login_pw"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/loginPW"
        android:layout_centerInParent="true"
        android:background="@drawable/sign_in"
        android:gravity="center"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/Register"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/loginBtn"
        android:layout_marginTop="6dp"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:background="@drawable/create_account"
        android:gravity="center"
        />
</RelativeLayout>