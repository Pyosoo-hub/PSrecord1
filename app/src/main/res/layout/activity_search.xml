<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_back_new1"
    tools:context=".SearchActivity">

    <EditText
        android:id="@+id/Search_gamedate"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textSize="12sp"
        android:hint="ex)20190809"/>
    <LinearLayout
        android:id="@+id/search_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
    <EditText
        android:id="@+id/SearchHome"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/search_nameback"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:hint="Home T"
        />
        <TextView
            android:id="@+id/search_vs"
            android:background="@drawable/search_vs"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"/>
    <EditText
        android:id="@+id/SearchAway"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/search_nameback"
        android:hint="Away T"
        android:layout_toRightOf="@+id/SearchHome"/>

    <Button
        android:id="@+id/Search"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="10dp"

        android:background="@drawable/search_button"
        />
    </LinearLayout>


    <ListView
        android:id="@+id/ScoreListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_top_layout"
        android:layout_alignParentBottom="true"
        android:padding="40dp"
        android:layout_margin="5dp"
        >
    </ListView>


</RelativeLayout>